{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"],

  "ts-node": {
    "esm": true
  },

  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    "moduleResolution": "Node",

    "jsx": "react-jsx",
    "jsxImportSource": "@ibgrav/ui",

    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  }
}
